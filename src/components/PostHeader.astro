---
// library imports
import { Image } from 'astro:assets';

// utils imports
import { slugify, formatDate } from "../js/utils";

const { category, title, author, date, image } = Astro.props;
---

<header>
  <div class="container">
    <a href="{`/author/${author}`">{author}</a>
    <p>{formatDate(date)}</p>
    <h1 class="h2">{title}</h1>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width="1200"
    height="400"
    format="avif"
    quality={80}
    class="hero-image"
  />
</header>