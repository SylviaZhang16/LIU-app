---
// library imports
import { Image } from 'astro:assets';

// utils imports
import { slugify, formatDate } from "../js/utils";

const { category, title, author, date, image } = Astro.props;
---

<header>
	<div class="flex justify-start">
		<div class="p-4 prose lg:prose-lg">
			<div class="flex-1">
				
			<a href="{`/author/${author}`" class="text-md text-base-content/70 flex gap-2 items-center">
				<label tabindex="0" class="btn btn-ghost btn-circle avatar">
					<div class="w-10 rounded-full">
					  <img src="../../public/images/1.png" />
					</div>
				</label>
				<span class="font-bold">{author}</span>
	
				<p class="badge badge-ghost ">{formatDate(date)}</p>
			</a>
			
	
			</div>
		 <div class="flex-1">

  </div>

		<figure class="flex justify-center py-4">
			<Image
			  src={image.src}
			  alt={image.alt}
			  width="1200"
			  height="300"
			/>
		  </figure>
    <h1 class="text-2xl font-bold">{title}</h1>
	</div>
	</div>


</header>
